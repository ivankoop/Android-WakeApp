<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_alert"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"
    >

    <TextView
        android:id="@+id/lbl_dialog_alert"
        android:text="Atencion!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:height="50dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:width="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/msg_dialog_alert"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/grey"
            android:text="Debe adquirir la aplicación de Spotify para acceder a esta opción."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/spotify_alert_accept_btn"
            android:text="Aceptar"/>

    </LinearLayout>
</LinearLayout>
