<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"
    >

    <TextView
        android:id="@+id/lbl_dialog_alarm"
        android:text="Distancia de alarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:height="50dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:width="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="30dp"
            android:id="@+id/alert_dialog_down_btn"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/down_btn"/>
        <TextView
            android:layout_width="80dp"
            android:id="@+id/alert_dialog_distance"
            android:text="0.5 km"
            android:gravity="center"
            android:textColor="@color/grey"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:textSize="25dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/up_btn"
            android:id="@+id/alert_dialog_up_btn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/alert_dialog_cancel_btn"
        android:textColor="@color/white"
        android:text="Cancelar"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/alert_dialog_accept_btn"
            android:text="Aceptar"/>

    </LinearLayout>
</LinearLayout>
